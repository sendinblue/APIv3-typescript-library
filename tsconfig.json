{
    "compilerOptions": {
        "outDir": "dist/",
        "module": "commonjs",
        "noImplicitAny": false,
        "target": "ES6",
        "strict": true,
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "noLib": false,
        "declaration": true,
        "isolatedModules": true,
        "lib": ["dom", "es6", "es5", "dom.iterable", "scripthost"],
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}
